<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/msg"
        app:cardBackgroundColor="#00FFFFFF"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/moneybg">

            <TextView
                android:id="@+id/mai2"
                android:layout_width="115dp"
                android:layout_height="21dp"
                android:layout_marginTop="47dp"
                android:layout_marginBottom="20dp"
                android:background="#00ECB158"
                android:fontFamily="@font/play"
                android:text="Drop Location :"
                android:textAlignment="viewStart"
                android:textColor="#FFFFFF"
                android:textColorHint="#535151"
                android:textSize="16sp"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.057"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tit"
                app:layout_constraintVertical_bias="1.0"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tit"
                android:layout_width="370dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="#00ECB158"
                android:fontFamily="@font/play"
                android:text="Issue Title"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/mai"
                android:layout_width="129dp"
                android:layout_height="21dp"
                android:layout_marginBottom="50dp"
                android:background="#00ECB158"
                android:fontFamily="@font/play"
                android:text="Pickup Location :"
                android:textAlignment="viewStart"
                android:textColor="#FFFFFF"
                android:textColorHint="#535151"
                android:textSize="16sp"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.06"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tit"
                app:layout_constraintVertical_bias="1.0"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/pul"
                android:layout_width="234dp"
                android:layout_height="20dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/selection_band_overlay"
                android:backgroundTint="#7A0202"
                android:fontFamily="@font/play"
                android:text="Pickup Location"
                android:textAlignment="viewStart"
                android:textColor="#FFFFFF"
                android:textColorHint="#535151"
                android:textSize="16sp"
                android:textStyle="italic"
                app:layout_constraintStart_toEndOf="@+id/mai"
                app:layout_constraintTop_toBottomOf="@+id/tit"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/dl"
                android:layout_width="234dp"
                android:layout_height="20dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selection_band_overlay"
                android:backgroundTint="#7A0202"
                android:fontFamily="@font/play"
                android:text="Drop Location"
                android:textAlignment="viewStart"
                android:textColor="#FFFFFF"
                android:textColorHint="#535151"
                android:textSize="16sp"
                android:textStyle="italic"
                app:layout_constraintStart_toEndOf="@+id/mai2"
                app:layout_constraintTop_toBottomOf="@+id/pul"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>